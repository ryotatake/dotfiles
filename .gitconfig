[user]
	name  = "Ryota Takeuchi"
	email = ryouta.takeuti@gmail.com

[core]
  editor = vim

[color]
  ui = auto

[alias]
  s = status
  a = add
  c = commit -v
  co = checkout
  d = diff
  l = log
  graph = log --graph --decorate --oneline
[push]
	default = matching
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
