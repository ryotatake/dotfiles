# npm install textlint
# npm install textlint-rule-prh textlint-rule-preset-jtf-style textlint-rule-preset-ja-technical-writing
{
  "filters": {},
  "rules": {
    "preset-ja-technical-writing": {
      "ja-no-weak-phrase": false,
      "ja-no-mixed-period": false,
      "no-exclamation-question-mark": false
    },
    "preset-jtf-style": true,
    "prh": {
      "rulePaths": [
        "~/dotfiles/node_modules/prh/prh-rules/media/WEB+DB_PRESS.yml",
        "~/dotfiles/node_modules/prh/prh-rules/media/techbooster.yml"
      ]
    }
  }
}
